@model Event
@{
    ViewData["Title"] = Model.Title;
}
@section Styles {
    <link rel="stylesheet" href="~/css/events_vololink.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
}


<div class="event-details-container public-view">
    <div class="event-header">
        <div class="header-nav">
            <a href="@Url.Action("Index", "Home")" class="btn btn-outline back-button">
                <i class="fas fa-arrow-left"></i>
            </a>
        </div>
        <h1 class="event-title">@Model.Title</h1>
        <div class="event-subtitle">
            <p class="meta-item">
                <i class="fas fa-calendar"></i>
                <span>@Model.Date.ToString("dd MMMM yyyy, HH:mm" , new System.Globalization.CultureInfo("uk-UA"))</span>
            </p>
            <p class="meta-item">
                <i class="fas fa-map-marker-alt"></i>
                <span>@Model.Location</span>
            </p>
        </div>
            @if (Model.RequiresVerifiedVolunteer)
            {
                <div class="event-badge verified-required">
                    <i class="fas fa-shield-alt"></i> Потрібна верифікація волонтера
                </div>
            }
        </div>
    </div>

    <div class="public-event-content">
        <div class="content-card event-description">
            <h2><i class="fas fa-info-circle"></i> Опис події</h2>
            <p>@Model.Description</p>
        </div>

        <div class="content-card organizer-info">
            <h2><i class="fas fa-user"></i> Організатор</h2>
            <p>@Model.Creator.FirstName @Model.Creator.LastName</p>
        </div>

        <div class="content-card cta-section">
            <div class="alert alert-info text-center">
                <h3>Бажаєте долучитися до події?</h3>
                <p>Приєднуйтесь до нашої спільноти волонтерів!</p>
                <div class="mt-3">
                    <a href="@Url.Page("/Account/Register", new { area = "Identity" })" class="btn btn-primary">
                        <i class="fas fa-user-plus"></i> Зареєструватися
                    </a>
                    <span class="mx-2">або</span>
                    <a href="@Url.Page("/Account/Login", new { area = "Identity" })" class="btn btn-outline-primary">
                        <i class="fas fa-sign-in-alt"></i> Увійти
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>