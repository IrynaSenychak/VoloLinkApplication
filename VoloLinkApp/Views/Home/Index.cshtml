@{
    ViewData["Title"] = "Home";
}
@section Styles {
    <link rel="stylesheet" href="~/css/home.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
}



<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
   
    
</head>
<main class="main-content">
<section class="hero-section">
    <div class="hero-container">
        <div class="hero-content">
            <h1 class="hero-title">Приєднуйся до волонтерства!</h1>
            <div class="hero-text">
                Шукаєш можливості приєднатися до волонтерства? 
                Вони усі тут!
                Дізнайся, як ти можеш допомогти іншим та змінити світ на краще.
                Ти можеш стати частиною великої справи вже сьогодні — зроби перший крок!
                
            </div>

                @if (User.Identity.IsAuthenticated)
                {
                    <a href="@Url.Action("Profile", "User")" class="hero-button">
                        До волонтерства
                    </a>
                }
                else
                {
                    <a href="@Url.Action("Guest", "User")" class="hero-button">
                        До волонтерства
                    </a>
                }
        </div>
    </div>
</section>



    <section class="events-section">
        <div class="container">
            <div class="section-header">
                <h2 class="section-title">Доступні події</h2>
                <p class="section-subtitle">Знайдіть можливість допомогти прямо зараз</p>
            </div>
            <div class="events-grid">
                <div class="event-card">
                    <div class="event-image">
                        <img src="/images/event1.jpg" alt="Прибирання парку">
                        <div class="event-category">Екологія</div>
                    </div>
                    <div class="event-info">
                        <h3 class="event-title">Прибирання парку</h3>
                        <p class="event-description">Допоможемо прибрати територію парку та зробити наше місто чистішим.</p>
                        <div class="event-meta">
                            <span class="event-date"><i class="fas fa-calendar"></i> 15 березня</span>
                            <span class="event-location"><i class="fas fa-map-marker-alt"></i> Центральний парк</span>
                        </div>
                        <a class="btn btn-detail" href="#">Детальніше <i class="fas fa-arrow-right"></i></a>
                    </div>
                </div>

                <div class="event-card">
                    <div class="event-image">
                        <img src="/images/event2.jpg" alt="Допомога дітям">
                        <div class="event-category">Діти</div>
                    </div>
                    <div class="event-info">
                        <h3 class="event-title">Допомога дітям</h3>
                        <p class="event-description">Організовуємо свято для дітей з дитбудинку та даруємо радість.</p>
                        <div class="event-meta">
                            <span class="event-date"><i class="fas fa-calendar"></i> 20 березня</span>
                            <span class="event-location"><i class="fas fa-map-marker-alt"></i> Дитячий будинок №2</span>
                        </div>
                        <a class="btn btn-detail" href="#">Детальніше <i class="fas fa-arrow-right"></i></a>
                    </div>
                </div>

                <div class="event-card">
                    <div class="event-image">
                        <img src="/images/event3.jpg" alt="Збір продуктів">
                        <div class="event-category">Допомога</div>
                    </div>
                    <div class="event-info">
                        <h3 class="event-title">Збір продуктів</h3>
                        <p class="event-description">Допоможемо сім'ям, що опинилися у скрутному становищі, зібравши необхідні продукти.</p>
                        <div class="event-meta">
                            <span class="event-date"><i class="fas fa-calendar"></i> 25 березня</span>
                            <span class="event-location"><i class="fas fa-map-marker-alt"></i> Соціальний центр</span>
                        </div>
                        <a class="btn btn-detail" href="#">Детальніше <i class="fas fa-arrow-right"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </section>


</main>




