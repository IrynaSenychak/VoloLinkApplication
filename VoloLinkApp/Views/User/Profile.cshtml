@using VoloLinkApp.Areas.Identity.Data
@model VoloLinkUser
@{
    ViewData["Title"] = Model != null ? "Профіль волонтера" : "Гість";
}

@section Styles {
    <link rel="stylesheet" href="~/css/profile.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
}

<div class="profile-container">
    @if (Model == null)
    {
        <!-- Guest View -->
        <div class="guest-section">
            <div class="guest-content">
                <h1>Приєднуйтесь до нашої спільноти волонтерів!</h1>
                <p>Щоб отримати доступ до всіх можливостей платформи, будь ласка, увійдіть або зареєструйтесь.</p>
                <div class="guest-buttons">
                    <a href="@Url.Page("/Account/Register", new { area = "Identity" })" class="btn btn-primary">
                        <i class="fas fa-user-plus"></i> Зареєструватися
                    </a>
                    <a href="@Url.Page("/Account/Login", new { area = "Identity" })" class="btn btn-outline">
                        <i class="fas fa-sign-in-alt"></i> Увійти
                    </a>
                </div>
            </div>
        </div>
    }
    else
    {

        <div class="profile-layout">
          
            <div class="profile-container">
                <div class="profile-layout">
                    @await Html.PartialAsync("_SideMenuPartial", (object)ViewBag.SideMenuData)


                    
                    <div class="main-content">
                        <div class="profile-header">
                            <div class="profile-avatar">
                                <i class="fas fa-user-circle fa-4x"></i>
                            </div>
                            <div class="profile-info">
                                <h1>@Model.FirstName @Model.LastName</h1>
                                <span class="username">@Model.UserName</span>
                                <span class="role-badge @(ViewBag.IsVerifiedVolunteer ? "verified" : "")">
                                    @(ViewBag.IsAdministrator ? "Адміністратор" : (ViewBag.IsVerifiedVolunteer ? "Верифікований волонтер" : "Волонтер"))
                                </span>
                            </div>
                        </div>

                        <div class="profile-content">
                            <div class="profile-section personal-info">
                                <h2><i class="fas fa-user"></i> Особиста інформація</h2>
                                <div class="info-grid">
                                    <div class="info-card">
                                        <div class="info-icon">
                                            <i class="fas fa-user"></i>
                                        </div>
                                        <div class="info-details">
                                            <label>Ім'я</label>
                                            <p>@Model.FirstName</p>
                                        </div>
                                    </div>
                                    <div class="info-card">
                                        <div class="info-icon">
                                            <i class="fas fa-user"></i>
                                        </div>
                                        <div class="info-details">
                                            <label>Прізвище</label>
                                            <p>@Model.LastName</p>
                                        </div>
                                    </div>
                                    <div class="info-card">
                                        <div class="info-icon">
                                            <i class="fas fa-envelope"></i>
                                        </div>
                                        <div class="info-details">
                                            <label>Email</label>
                                            <p>@Model.Email</p>
                                        </div>
                                    </div>
                                    <div class="info-card">
                                        <div class="info-icon">
                                            <i class="fas fa-phone"></i>
                                        </div>
                                        <div class="info-details">
                                            <label>Телефон</label>
                                            <p>@(string.IsNullOrEmpty(Model.PhoneNumber) ? "Не вказано" : Model.PhoneNumber)</p>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="profile-section">
                                <h2><i class="fas fa-chart-line"></i> Волонтерська діяльність</h2>
                                <div class="stats-grid">
                                    <div class="stat-card">
                                        <div class="stat-icon">
                                            <i class="fas fa-calendar-check"></i>
                                        </div>
                                        <div class="stat-content">
                                            <h3>Відвідані події</h3>
                                            <p class="stat-number">
                                                @ViewBag.AttendedEventsCount
                                            </p>
                                        </div>
                                    </div>
                                    <div class="stat-card">
                                        <div class="stat-icon">
                                            <i class="fas fa-calendar-plus"></i>
                                        </div>
                                        <div class="stat-content">
                                            <h3>Створені події</h3>
                                            <p class="stat-number">
                                                @ViewBag.CreatedEventsCount
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            
                        </div>
                    </div>
        </div>
    
 </div>
        </div>
    }
 </div>