@model VoloLinkApp.Models.UserSettingsViewModel
@{
    ViewData["Title"] = "Налаштування профілю";
}

@section Styles {
    <link rel="stylesheet" href="~/css/profile.css" />
}

<div class="profile-container">
    <div class="profile-layout">
        @await Html.PartialAsync("_SideMenuPartial", (object)ViewBag.SideMenuData)

        <div class="settings-content">
            <h2>Налаштування профілю</h2>

            <div class="settings-section">
                <form asp-action="UpdateProfile" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="UserName">Ім'я користувача</label>
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="FirstName">Ім'я</label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="LastName">Прізвище</label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Email">Email</label>
                        <input asp-for="Email" class="form-control" disabled />
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Зберегти зміни</button>
                    </div>
                </form>
            </div>

            <div class="settings-section verification-section">
                <h3>Верифікація волонтера</h3>
                @if (ViewBag.IsVerifiedVolunteer)
                {
                    <div class="alert alert-success">
                        <i class="fas fa-check-circle"></i> Ви вже верифікований волонтер
                    </div>
                }
                else if (ViewBag.IsAdministrator)
                {
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> Як адміністратор, ви маєте повний доступ до системи
                    </div>
                }
                else if (ViewBag.HasPendingRequest)
                {
                    <div class="alert alert-info">
                        <i class="fas fa-clock"></i> Ваш запит на верифікацію в обробці
                    </div>
                }
                else if (ViewBag.LastRejectedRequest != null)
                {
                    <div class="alert alert-warning">
                        <h4><i class="fas fa-exclamation-circle"></i> Ваш останній запит було відхилено</h4>
                        <p class="mb-2">Дата розгляду: @(((DateTime)ViewBag.LastRejectedRequest.ProcessedDate).ToString("dd.MM.yyyy HH:mm"))</p>
                        @if (!string.IsNullOrEmpty(ViewBag.LastRejectedRequest.AdminResponse))
                        {
                            <p class="mb-3"><strong>Відповідь адміністратора:</strong></p>
                            <p class="admin-response">@ViewBag.LastRejectedRequest.AdminResponse</p>
                        }
                        <form asp-action="RequestVerification" method="post" class="mt-3">
                            <div class="form-group">
                                <label for="verificationMessage">Нове повідомлення для адміністратора</label>
                                <textarea name="message" id="verificationMessage" class="form-control"
                                      rows="4" placeholder="Опишіть свій досвід волонтерства та чому ви хочете стати верифікованим волонтером"></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-user-check"></i> Подати нову заявку на верифікацію
                            </button>
                        </form>
                    </div>
                }
                else
                {

                    <form asp-action="RequestVerification" method="post">
                        <div class="form-group">
                            <label for="verificationMessage">Повідомлення для адміністратора</label>
                            <textarea name="message" id="verificationMessage" class="form-control" 
                                    rows="4" placeholder="Опишіть свій досвід волонтерства та чому ви хочете стати верифікованим волонтером"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-user-check"></i> Подати заявку на верифікацію
                        </button>
                    </form>
                }
            </div>
        </div>
    </div>
</div>